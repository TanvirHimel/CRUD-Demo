
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowPlayerList</title>
    <link href="~/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="table-responsive">
        <table class="table table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th> Player ID </th>
                    <th> First Name </th>
                    <th> Last Name </th>
                    <th> Email </th>
                    <th> Actions </th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (System.Data.DataRow dr in ViewBag.player.Rows)
                    {
                        <tr>
                            <td> @dr["PlayerID"] </td>
                            <td> @dr["FirstName"] </td>
                            <td> @dr["LastName"] </td>
                            <td> @dr["Email"] </td>
                            <td>
                                <a href="/Home/UpdatePlayer? id = @dr["PlayerID"]"> Update </a>
                                <a href="/Home/DeletePlayer? id = @dr["PlayerID"]"> Delete </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

    </div>
</body>
</html>
